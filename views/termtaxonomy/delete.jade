extends ../layout

block content
  h2.display-data= __("Delete %s?", __("Termtaxonomy"))
            
  table.table.table-bordered
    tr
      th= __("Property")
      th= __("Value")
        tr
          td Term
          td= display(termtaxonomy.term)
        tr
          td Taxonomy
          td= display(termtaxonomy.taxonomy)
        tr
          td Description
          td= display(termtaxonomy.description)


  form#termtaxonomy-form.form-horizontal(action="/termtaxonomies/" + termtaxonomy._id + "/delete", method="POST")
    .form-actions
      a.btn.btn-warning(href="/termtaxonomies")= __("Back")
      | 
      input.btn.btn-danger(type="submit", value=__("Delete"))
