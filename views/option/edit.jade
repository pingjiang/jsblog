extends ../layout
include ../mixins/form-helpers

block content
  form#option-form(action="/options/" + option._id + "/edit", method="POST", role="form")
    fieldset
      legend= __("Edit %s", __("Option"))

      .form-group
        +label("name", __("Name"))
        +text("name", option.name)
        +errorMessage(option, 'name')
      .form-group
        +label("value", __("Value"))
        +text("value", option.value)
        +errorMessage(option, 'value')

    .form-actions
      a.btn.btn-warning(href="/options")= __("Back")
      | 
      input.btn.btn-primary(type="submit", value=__("Save"))
