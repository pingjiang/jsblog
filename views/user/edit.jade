extends ../layout
include ../mixins/form-helpers

block content
  form#user-form(action="/users/" + user._id + "/edit", method="POST", role="form")
    fieldset
      legend= __("Edit %s", __("User"))

      .form-group
        +label("firstName", __("Firstname"))

        +text("firstName", user.firstName)
        +errorMessage(user, 'firstName')
      .form-group
        +label("lastName", __("Lastname"))

        +text("lastName", user.lastName)
        +errorMessage(user, 'lastName')
      .form-group
        +label("niceName", __("Nicename"))

        +text("niceName", user.niceName)
        +errorMessage(user, 'niceName')
      .form-group
        +label("displayName", __("Displayname"))

        +text("displayName", user.displayName)
        +errorMessage(user, 'displayName')
      .form-group
        +label("email", __("Email"))

        +email("email", user.email)
        +errorMessage(user, 'email')
      .form-group
        +label("password", __("Password"))

        +password("password", user.password)
        +errorMessage(user, 'password')
      .form-group
        +label("passwordConfirmation", __("passwordConfirmation"))

        +password("passwordConfirmation", user.passwordConfirmation)
        +errorMessage(user, 'passwordConfirmation')
      .form-group
        +label("url", __("Url"))

        +text("url", user.url)
        +errorMessage(user, 'url')

    .form-actions
      a.btn.btn-warning(href="/users")= __("Back")
      | 
      input.btn.btn-primary(type="submit", value=__("Save"))
